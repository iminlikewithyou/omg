{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src", //i changed this from .
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "alwaysStrict": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5"
  },
  "paths": {
    "@client/*": ["client/*"],
    "@shared/*": ["shared/*"]
  },
  "include": ["./src/client/**/*", "./src/shared/**/*"]
}