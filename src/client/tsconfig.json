{
  "compilerOptions": {
    "allowJs": true,
    // "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "noEmitOnError": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "alwaysStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist/client",

    "baseUrl": ".",
    "rootDirs": [".", "../shared"],

    "paths": {
      "@client/*": ["./*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*"]
}